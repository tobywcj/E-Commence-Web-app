<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grails</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/home.css">

</head>

<body class="d-flex flex-column text-center text-white bg-dark p-3 mx-auto">
    
    <div class="container" id="nav-bar">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Grails</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="/shops">Shops</a>
                    <% if(!currentUser) { %>
                    <a class="nav-link" href="/users/login">Login</a>
                    <a class="nav-link" href="/users/register">Register</a>
                    <% } else { %>
                    <a class="nav-link" href="/users/logout">Logout</a>
                    <% } %>
                </nav>
            </div>
        </header>

        <%- include('./partials/flash') %> 
    </div>

    <div class="container-fluid">
        <main class="px-3">
            <section id="intro" class="fade-fromLeft d-flex flex-column justify-content-center">
                <h1>Grails</h1>
                <p class="lead"> Welcome to Grails! <br> Jump right in and explore our many shops. <br>
                    Feel free to share some of your own and comment on others!</p>
                <div><a href="/shops" class="btn btn-lg btn-secondary fw-bold border-white bg-white">View Shops</a></div>
            </section>

            <h1>Trending Now</h1>

            <section id="trending-products" class="d-flex align-items-center justify-content-center">
                <div class="box">
                    <% products.forEach((product, i) => {%>
                        <span id="product-card" class="card mx-2 mt-3 p-2" style="--i:<%= i+1 %>;">
                            <% if(product.thumbnail.length) { %>
                                <img crossorigin="anonymous" class="img-fluid rounded card-img-top" src="<%= product.thumbnail %>" alt="">
                                <% } else { %>
                                <img crossorigin="anonymous" class="img-fluid rounded card-img-top" src="https://images.stockx.com/images/Gallery-Dept-Sun-Faded-English-Logo-Hoodie-Black.jpg?fit=fill&bg=FFFFFF&w=700&h=500&fm=webp&auto=compress&trim=color&q=90&dpr=2&updated_at=1660895550" alt="">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= product.shoeName %></h5>
                                <p class="card-text fs-3 fw-light">Lowest Ask:</p>
                                <% const lowestPrice = Object.values(product.lowestResellPrice).reduce((acc, curr) => acc < curr ? acc : curr); %>
                                <% if(lowestPrice) { %>
                                <p class="card-text">USD$<%= lowestPrice %></p>
                                <% } else { %>
                                <p class="card-text">Not available</p>
                                <% } %>
                            </div>
                        </span>
                    <% }) %>
                </div>
            </section>

            <% products.forEach((product, i) => {%>
                <div class="popup-view">
                    <div id="popup-card" class="card text-center">
                        <div class="card-header">
                            <div data-bs-theme="dark">
                                <button type="button" class="btn-close float-md-end" aria-label="Close"></button>
                            </div>
                        </div>

                        <% if(product.thumbnail.length) { %>
                            <img crossorigin="anonymous" class="img-fluid rounded" src="<%= product.thumbnail %>" alt="">
                            <% } else { %>
                            <img crossorigin="anonymous" class="img-fluid rounded" src="https://images.stockx.com/images/Gallery-Dept-Sun-Faded-English-Logo-Hoodie-Black.jpg?fit=fill&bg=FFFFFF&w=700&h=500&fm=webp&auto=compress&trim=color&q=90&dpr=2&updated_at=1660895550" alt="">
                        <% } %>

                        <div class="card-body">
                            <h5 class="card-title fs-2"><%= product.shoeName %></h5>
                            <div class="d-flex justify-content-center">
                                <% const lowestPrice = Object.values(product.lowestResellPrice).reduce((acc, curr) => acc < curr ? acc : curr); %></curr>
                                <% if(lowestPrice) { %>
                                <p class="card-text fs-5 fw-light me-4">From</p>
                                <p class="card-text fs-2 me-4">USD$<%= lowestPrice %></p>
                                <% } else { %>
                                    <p class="card-text fs-2 me-4">Check</p>
                                <% } %>
                                <p class="card-text fs-5 fw-light me-4">on</p>
                                <% const BestPriceReseller = Object.keys(product.lowestResellPrice).find(reseller => product.lowestResellPrice[reseller] === lowestPrice); %>
                                <a href="<%= product.resellLinks[BestPriceReseller] %>" class="btn btn-outline-primary fs-2"><%= BestPriceReseller.toUpperCase() %></a>
                            </div>

                            <p class="card-text"><%= product.description %></p>

                            <a href="#" class="btn btn-primary">Go somewhere</a>

                        </div>
                        <div class="card-footer text-body-secondary">
                            2 days ago
                        </div>
                    </div>
                </div>
            <% }) %>

            <div><a href="" class="btn btn-lg btn-secondary fw-bold border-white bg-white">See All</a></div>
            

        </main>
        
        <footer class="mt-auto text-white-50">
            <p>&copy; 2023 Grails</p>
        </footer>
    </div>
        



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
        integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
        crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
        integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
        crossorigin="anonymous">
    </script>

    <script src="/javascripts/home.js"></script>

</body>

</html>