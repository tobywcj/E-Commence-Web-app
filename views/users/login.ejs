<% layout('layouts/boilerplate') %>


<div class="container d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="https://res.cloudinary.com/dtv2tb97n/image/upload/v1685551129/SneakerApp/Screenshot_2023-06-01_003809_n5k8ko.png" alt="" class="card-img-top">

                    <h3 class="card-title mt-3 mb-3">Login</h3>

                    <form action="/users/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">Right to go !!</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="text" id="password" name="password" required>
                            <div class="valid-feedback">Right to go !!</div>
                        </div>
                        
                        <div class="mb-3 d-grid gap-2">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>

                    <footer>
                        <a class="btn btn-outline-info btn-sm" role="button" href="/shops">See All Shops</a>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>
