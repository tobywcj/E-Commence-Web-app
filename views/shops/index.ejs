<% layout('layouts/boilerplate') %>

    <h1>All Shops</h1>
    <div>
        <a href="/shops/new">Add Shops</a>
    </div>
    <ul>
        <% for (let shop of shops) {%>
            <div class="card mb-3 px-3 py-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid rounded" src="<%= shop.image %>" alt="shop_image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= shop.name %></h5>
                            <p class="card-text"><%= shop.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= shop.category %> Shop</small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= shop.location %></small>
                            </p>
                            <a href="/shops/<%= shop._id %>" class="btn btn-primary">View <%= shop.name %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </ul>